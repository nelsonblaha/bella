<p id="notice"><%= notice %></p>

<h1>Listing Residents</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birth</th>
      <th>Arrival</th>
      <th>Asylum status</th>
      <th>Work permit</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.first_name %></td>
        <td><%= resident.last_name %></td>
        <td><%= resident.birth %></td>
        <td><%= resident.arrival %></td>
        <td><%= resident.asylum_status %></td>
        <td><%= resident.work_permit %></td>
        <td><%= resident.country %></td>
        <td><%= link_to 'Show', resident %></td>
        <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
        <td><%= link_to 'Destroy', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

